<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:circularflow_radiusInDP="28dp">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_end="16dp" />

    <View
        android:id="@+id/filter_container"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/corner_shape"
        android:backgroundTint="@color/lightGray"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toEndOf="@+id/editTextText"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/filterImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/filter"
        app:layout_constraintTop_toTopOf="@id/filter_container"
        app:layout_constraintStart_toStartOf="@id/filter_container"
        app:layout_constraintEnd_toEndOf="@id/filter_container"
        app:layout_constraintBottom_toBottomOf="@id/filter_container"/>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:autofillHints=""
        android:drawableStart="@drawable/search"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="@string/search_hint"
        android:inputType="text"
        android:paddingHorizontal="12dp"
        style="@style/EditText"
        app:layout_constraintEnd_toStartOf="@+id/filter_container"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/sort_container"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/sortImage"
        app:layout_constraintEnd_toEndOf="@+id/sortImage"
        app:layout_constraintStart_toStartOf="@id/sortText"/>

    <ImageView
        android:id="@+id/sortImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sort_icon"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_container"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"/>

    <TextView
        android:id="@+id/sortText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/sortImage"
        app:layout_constraintTop_toTopOf="@+id/sortImage"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/offerList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/sort_container"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>