<resources>

    <style name="Base.Theme.EM_test" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="GreenText" parent="TextAppearance.AppCompat" >
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="WhiteText" parent="TextAppearance.AppCompat" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText" >
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/corner_shape</item>
        <item name="android:backgroundTint">@color/lightGray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>