<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="@string/profile"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/firstBarrier"/>

    <View
        android:id="@+id/buttonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/corner_shape"
        android:backgroundTint="@color/darkGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstBarrier"
        app:layout_constraintBottom_toTopOf="@id/thirdBarrier"
        app:layout_constraintBaseline_toTopOf="parent"/>

    <View
        android:id="@+id/stroke1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/stroke"
        app:layout_constraintStart_toStartOf="@id/buttonsContainer"
        app:layout_constraintTop_toBottomOf="@id/firstButtonContainer"
        app:layout_constraintBottom_toTopOf="@id/secondButtonContainer"
        app:layout_constraintEnd_toEndOf="@id/buttonsContainer"
        />

    <View
        android:id="@+id/stroke2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/stroke"
        app:layout_constraintStart_toStartOf="@id/buttonsContainer"
        app:layout_constraintTop_toBottomOf="@id/secondButtonContainer"
        app:layout_constraintBottom_toTopOf="@id/thirdButtonContainer"
        app:layout_constraintEnd_toEndOf="@id/buttonsContainer"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/firstBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/firstButtonContainer"
        app:layout_constraintTop_toBottomOf="@id/profileText"
        app:layout_constraintStart_toStartOf="@id/firstButtonContainer"
        />

    <View
        android:id="@+id/firstButtonContainerSpace"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/firstButtonContainer"
        app:layout_constraintStart_toStartOf="@id/firstButtonContainer"
        app:layout_constraintBottom_toBottomOf="@id/firstButtonContainer"/>

    <View
        android:id="@+id/firstButtonContainer"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="@id/buttonsContainer"
        app:layout_constraintTop_toBottomOf="@id/firstBarrier"
        app:layout_constraintBottom_toTopOf="@id/stroke1"
        app:layout_constraintEnd_toEndOf="@id/buttonsContainer"
        />

    <View
        android:id="@+id/secondButtonContainer"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="@id/buttonsContainer"
        app:layout_constraintTop_toBottomOf="@id/stroke1"
        app:layout_constraintBottom_toTopOf="@id/stroke2"
        app:layout_constraintEnd_toEndOf="@id/buttonsContainer"
        />

    <View
        android:id="@+id/thirdButtonContainer"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintBottom_toBottomOf="@id/thirdBarrier"
        app:layout_constraintEnd_toEndOf="@id/buttonsContainer"
        app:layout_constraintStart_toStartOf="@id/buttonsContainer"
        app:layout_constraintTop_toBottomOf="@id/stroke2" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/thirdBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/thirdButtonContainer"
        app:layout_constraintStart_toStartOf="@id/thirdButtonContainer"
        app:layout_constraintBottom_toBottomOf="@id/buttonsContainer"
        />
    <View
        android:id="@+id/thirdButtonContainerSpace"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/thirdButtonContainer"
        app:layout_constraintStart_toStartOf="@id/thirdButtonContainer"
        app:layout_constraintBottom_toBottomOf="@id/buttonsContainer"/>

    <TextView
        android:id="@+id/firstButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_support"
        android:textColor="@color/white"
        android:layout_marginVertical="16dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/firstButtonContainer"
        app:layout_constraintTop_toTopOf="@id/firstButtonContainer"
        app:layout_constraintBottom_toBottomOf="@id/firstButtonContainer"/>

    <ImageView
        android:id="@+id/firstButtonImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/button_icon"
        app:layout_constraintEnd_toEndOf="@id/firstButtonContainer"
        app:layout_constraintTop_toTopOf="@id/firstButtonContainer"
        app:layout_constraintBottom_toBottomOf="@id/firstButtonContainer"/>

    <TextView
        android:id="@+id/secondButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:layout_marginVertical="16dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/secondButtonContainer"
        app:layout_constraintTop_toTopOf="@id/secondButtonContainer"
        app:layout_constraintBottom_toBottomOf="@id/secondButtonContainer"/>

    <ImageView
        android:id="@+id/secondButtonImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/button_icon"
        app:layout_constraintEnd_toEndOf="@id/secondButtonContainer"
        app:layout_constraintTop_toTopOf="@id/secondButtonContainer"
        app:layout_constraintBottom_toBottomOf="@id/secondButtonContainer"/>

    <TextView
        android:id="@+id/thirdButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:textColor="@color/white"
        android:layout_marginVertical="16dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/thirdButtonContainer"
        app:layout_constraintTop_toTopOf="@id/thirdButtonContainer"
        app:layout_constraintBottom_toBottomOf="@id/thirdButtonContainer"/>

    <ImageView
        android:id="@+id/thirdButtonImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/button_icon"
        app:layout_constraintEnd_toEndOf="@id/thirdButtonContainer"
        app:layout_constraintTop_toTopOf="@id/thirdButtonContainer"
        app:layout_constraintBottom_toBottomOf="@id/thirdButtonContainer"/>

</androidx.constraintlayout.widget.ConstraintLayout>